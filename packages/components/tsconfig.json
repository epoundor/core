  "include": ["src/**/*", "src/**/*.vue", "tailwind.config.ts"],
  "exclude": ["src/**/*.stories.ts"],
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "es2021"],
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
